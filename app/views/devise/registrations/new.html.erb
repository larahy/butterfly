<div class="center row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="section-container tabs" data-section="tabs">
        <div class="content" data-section-content>
            <p>
            <div class="row">
                <div class="large-12 columns">
                    <div class="signup-panel">
                        <p class="welcome">Hello, new user!</p>
                        <form>
                            <div class="row collapse">
                                <div class="small-2  columns">
                                    <span class="prefix"><i class="fi-torso"></i></span>
                                </div>
                                <div class="small-10  columns">
                                    <%= f.text_field :first_name, autocomplete: "off", :placeholder => "First Name"%>
                                </div>
                            </div>
                            <div class="row collapse">
                                <div class="small-2  columns">
                                    <span class="prefix"><i class="fi-torso"></i></span>
                                </div>
                                <div class="small-10  columns">
                                    <%= f.text_field :last_name, autocomplete: "off", :placeholder => "Last Name"%>
                                </div>
                            </div>
                            <div class="row collapse">
                                <div class="small-2 columns">
                                    <span class="prefix"><i class="fi-mail"></i></span>
                                </div>
                                <div class="small-10  columns">
                                    <!--<input type="text" placeholder="Email">-->
                                    <%= f.email_field :email, autofocus: true, :placeholder => "Email"%>
                                </div>
                            </div>
                            <div class="row collapse">
                                <div class="small-2 columns ">
                                    <span class="prefix"><i class="fi-lock"></i></span>
                                </div>
                                <div class="small-10 columns ">
                                    <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
                                </div>
                            </div>
                            <div class="row collapse">
                                <div class="small-2 columns ">
                                    <span class="prefix"><i class="fi-lock"></i></span>
                                </div>
                                <div class="small-10 columns ">
                                    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Password Confirmation" %>
                                </div>
                            </div>
                        </form>
                        <%= f.submit "Sign up", :class =>"button" %></a>
                    </div>
                </div>
            </div></p>
        </div>
        <% end %>
    </div>

